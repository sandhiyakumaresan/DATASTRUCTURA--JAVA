import java.util.*;
class oddeven{
    public static void main(String args[])
    {
        Scanner sc = new Scanner(System.in);
        int n= sc.nextInt ();
        System.out.println("enter the element");
        int countodd =0;
        int counteven =0;
        System.out.println("number");
        for(int i =0;i<n;i++){
            int num = sc.nextInt();
            if(num %2==0){
                counteven ++ ;
            }
            else{
                countodd ++ ;
            }
        }
        System.out.println("even"+counteven);
        System.out.println("odd"+countodd);
    }
}
