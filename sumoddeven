import java.util.*;
class oddeven{
    public static void main(String args[])
    {
        Scanner sc = new Scanner(System.in);
        int n= sc.nextInt ();
        System.out.println("enter the element");
        int sumodd =0;
        int sumeven =0;
        System.out.println("number");
        for(int i =0;i<n;i++){
            int num = sc.nextInt();
            if(num %2==0){
                sumeven += num ;
            }
            else{
                sumodd +=num ;
            }
        }
        System.out.println("even"+sumeven);
        System.out.println("odd"+sumodd);
    }
}
